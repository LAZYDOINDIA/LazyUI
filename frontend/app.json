{
  "expo": {
    "name": "LazyDo",
    "slug": "lazydo-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lazydo.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366f1"
      },
      "package": "com.lazydo.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "description": "The Lazy Way to Get Things Done - A marketplace for people who want tasks done for them and those who want to earn money helping the lazy ones.",
    "keywords": ["task", "lazy", "marketplace", "earn", "help", "services"],
    "author": "LazyDo Team"
  }
} 